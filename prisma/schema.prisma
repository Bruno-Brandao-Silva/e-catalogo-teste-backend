generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Produto {
  id            Int                @id @default(autoincrement())
  nome          String
  marca         String
  descricao     String
  categorias    ProdutoCategoria[]
  subcategorias ProdutoSubcategoria[]
  cores         ProdutoCor[]
  tamanhos      Tamanho[]
  preco         Float
  imagem        String
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
}

model Categoria {
  id       String             @id @default(uuid())
  nome     String             @unique
  produtos ProdutoCategoria[]
}

model ProdutoCategoria {
  produtoId   Int
  categoriaId String
  produto     Produto   @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  categoria   Categoria @relation(fields: [categoriaId], references: [id], onDelete: Cascade)

  @@id([produtoId, categoriaId])
}

model Subcategoria {
  id       String                @id @default(uuid())
  nome     String                @unique
  produtos ProdutoSubcategoria[]
}

model ProdutoSubcategoria {
  produtoId      Int
  subcategoriaId String
  produto        Produto      @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  subcategoria   Subcategoria @relation(fields: [subcategoriaId], references: [id], onDelete: Cascade)

  @@id([produtoId, subcategoriaId])
}

model Cor {
  id       String       @id @default(uuid())
  nome     String       @unique
  produtos ProdutoCor[]
}

model ProdutoCor {
  produtoId Int
  corId     String
  produto   Produto @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  cor       Cor     @relation(fields: [corId], references: [id])

  @@id([produtoId, corId])
}

model Tamanho {
  id         String  @id @default(uuid())
  nome       String
  quantidade Int     @default(0)
  produtoId  Int
  produto    Produto @relation(fields: [produtoId], references: [id], onDelete: Cascade)
}
